# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Helius API Key for Solana RPC
HELIUS_API_KEY=your_helius_devnet_api_key_here

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://devnet.helius-rpc.com/?api-key=${HELIUS_API_KEY}

# MongoDB Configuration (for caching/indexing)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=AppName

# Additional Database Options (if needed)
DATABASE_URL=your_database_url_here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# API Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
