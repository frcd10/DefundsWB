{
  "compilerOptions": {
    /* ─ General settings ─ */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,

    /* ─ Module resolution ─ */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    /* ─ Path alias for `@/*` → `src/*` ─ */
    "baseUrl": ".",                            // <── added
    "paths": {                                // <── added
      "@/*": ["src/*"]
    },

    /* ─ Next.js plugin ─ */
    "plugins": [
      { "name": "next" }
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
